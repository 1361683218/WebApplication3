@model WebApplication3.Models.User
@{
    ViewData["Title"] = "调岗信息查询";
    Layout ="_ELayout";
}
<link rel="stylesheet" href="~/css/Depts.css">
<div class="container">
    <h2 class="mt-4">调岗信息查询</h2>

    <form asp-action="TransferInfo" method="get" class="search-form">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="idCard">身份证号:</label>
                <input type="text" name="idCard" id="idCard" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label for="name">姓名:</label>
                <input type="text" name="name" id="name" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">查询</button>
    </form>

    @if (Model != null)
    {
        <h3 class="mt-4">调岗信息</h3>
        <p>姓名: @Model.Uname</p>
        <p>部门: @Model.DidNavigation?.Dname</p>
        <p>职位: @Model.PidNavigation?.Pname</p>
        <p>状态: @Model.Ustatus</p>

        @if (Model.Ustatus == "离职")
        {
            <form asp-action="ConfirmTransfer" method="post">
                <input type="hidden" name="uid" value="@Model.Uid" />
                <button type="submit" class="btn btn-primary">确认到岗</button>
            </form>
        }
    }
</div>