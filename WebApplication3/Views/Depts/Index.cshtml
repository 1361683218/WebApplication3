@model IEnumerable<WebApplication3.Models.Dept>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Depts.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
</head>
<body>
    <p>
        <a asp-action="Create" class="btn btn-primary">新建部门</a>
        <form asp-action="Search" method="get" class="search-form">
        </form>
    </p>

    <table id="deptTable" class="table">
        <thead>
            <tr>
                <th>部门ID</th>
                <th>部门名称</th>
                <th>部门电话</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="部门ID">@Html.DisplayFor(modelItem => item.Did)</td>
                    <td data-label="部门名称">@Html.DisplayFor(modelItem => item.Dname)</td>
                    <td data-label="部门电话">@Html.DisplayFor(modelItem => item.Dtel)</td>
                    <td data-label="操作">
                        <a asp-action="Edit" asp-route-id="@item.Did"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Did"><i class="fas fa-info-circle"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Did"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 初始化DataTables
            $('#deptTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.10.25/i18n/Chinese.json'
                }
            });
        });
    </script>
</body>
</html>