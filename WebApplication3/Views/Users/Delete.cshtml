@model WebApplication3.Models.User

@{
    ViewData["Title"] = "删除";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Depts.css">
</head>
<body>
    <div class="delete-container">
        <h1>删除</h1>
        <h3>您确定要删除此项吗？</h3>
        <div>
            <h4>用户</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    用户名
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Uname)
                </dd>
                <dt class="col-sm-2">
                    性别
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usex)
                </dd>
                <dt class="col-sm-2">
                    入职时间
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Urzsj)
                </dd>
                <dt class="col-sm-2">
                    电话
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Utel)
                </dd>
                <dt class="col-sm-2">
                    状态
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ustatus)
                </dd>
                <dt class="col-sm-2">
                    地址
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Uadress)
                </dd>
                <dt class="col-sm-2">
                    身份证号
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usfzh)
                </dd>
                <dt class="col-sm-2">
                    邮箱
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Umail)
                </dd>
                <dt class="col-sm-2">
                    部门导航
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DidNavigation.Did)
                </dd>
                <dt class="col-sm-2">
                    薪资导航
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MidNavigation.Mid)
                </dd>
                <dt class="col-sm-2">
                    职位导航
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PidNavigation.Pid)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Uid" />
                <input type="submit" value="删除" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">返回列表</a>
            </form>
        </div>
    </div>
</body>
</html>