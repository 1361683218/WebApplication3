@model IEnumerable<WebApplication3.Models.Post>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Depts.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
</head>
<body>
    <div class="container">
        <p class="mb-4">
            <a asp-action="Create" class="btn btn-primary">新建</a>
        </p>
        <table id="postTable" class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>职位名称</th>
                    <th>部门导航</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Pname)</td>
                        <td>@Html.DisplayFor(modelItem => item.DidNavigation.Did)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Pid"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Pid"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Pid"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 初始化DataTables
            $('#postTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.10.25/i18n/Chinese.json'
                }
            });
        });
    </script>
</body>
</html>