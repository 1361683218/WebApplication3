@model IEnumerable<WebApplication3.Models.Mpay>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Depts.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <p>
            <a asp-action="Create" class="btn btn-primary">创建新项</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        级别
                    </th>
                    <th>
                        薪资
                    </th>
                    <th>
                        职位导航
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mlevel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mpay1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PidNavigation.Pid)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Mid"><i class="fas fa-edit"></i></a> 
                            <a asp-action="Details" asp-route-id="@item.Mid"><i class="fas fa-info-circle"></i></a> 
                            <a asp-action="Delete" asp-route-id="@item.Mid"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>