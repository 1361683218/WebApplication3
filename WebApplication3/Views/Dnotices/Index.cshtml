@model IEnumerable<WebApplication3.Models.Dnotice>

@{
    ViewData["Title"] = "索引";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Depts.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <p>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> 创建新项</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    调岗时间
                </th>
                <th>
                    到岗时间
                </th>
                <th>
                    原本岗位编号
                </th>
                <th>
                    去向岗位编号
                </th>
                <th>
                    员工编号
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Naddtime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ncontime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NpostNavigation.Pid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NpostoNavigation.Pid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nu.Uid)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Nuid" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a> 
                        <a asp-action="Details" asp-route-id="@item.Nuid" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i></a> 
                        <a asp-action="Delete" asp-route-id="@item.Nuid" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>